{
  "name": "Scrolly",
  "version": "1.0",
  "description": "Scroll to the top of the Webpages with single click",
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "96": "icons/icon96.png",
    "128": "icons/icon128.png"
  },
  "browser_action": {
    "default_icon": "icons/icon128.png"
  },
  "permissions": [
    "activeTab",
    "<all_urls>"
  ],
  "manifest_version": 2,
  "web_accessible_resources": [
    "icon48.png"
  ],
  "content_scripts": [{
    "run_at": "document_start",
    "matches": [
      "<all_urls>"
    ],
    "css": [
      "style/style.css"
    ],
    "js": [
      "lib/jquery-3.2.1.min.js",
      "js/background.js"
    ]
  }]
}